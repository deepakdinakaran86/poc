<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:jaxrs="http://cxf.apache.org/jaxrs"
	xmlns:tx="http://www.springframework.org/schema/tx" xmlns:p="http://www.springframework.org/schema/p"
	xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd 
		http://cxf.apache.org/bindings/soap http://cxf.apache.org/schemas/configuration/soap.xsd 
		http://cxf.apache.org/jaxrs http://cxf.apache.org/schemas/jaxrs.xsd 
		http://www.springframework.org/schema/context	http://www.springframework.org/schema/context/spring-context.xsd ">

	<import resource="/spring/alarmconf-app-context.xml" />
	
		<!-- Swagger API listing resource -->
	<bean id="swaggerResource" class="io.swagger.jaxrs.listing.ApiListingResource" />
	<!-- Swagger writers -->
	<bean id="swaggerWriter" class="io.swagger.jaxrs.listing.SwaggerSerializers" />

	<jaxrs:server id="alarmconfig" address="/alarmconfig">
		<jaxrs:serviceBeans>
 			<ref bean="deviceThreshold" />
 			<ref bean="geoConfig" />
 			<ref bean="swaggerResource" />
		</jaxrs:serviceBeans>
 		<jaxrs:providers>
			<ref bean="jacksonJsonProvider" />
			<ref bean="exceptionHandler" />
			<ref bean="swaggerWriter" />
		</jaxrs:providers> 
	</jaxrs:server>

	<bean id="jsonObjectMapper" class="com.pcs.avocado.rest.mapper.GalaxyObjectMapper" />
	<bean id="exceptionHandler"
		class="com.pcs.avocado.commons.exception.GalaxyExceptionHandler" />
	<bean id="jacksonJsonProvider"
		class="com.fasterxml.jackson.jaxrs.json.JacksonJaxbJsonProvider">
		<constructor-arg name="mapper" ref="jsonObjectMapper" />
		<constructor-arg name="annotationsToUse">
			<null />
		</constructor-arg>
	</bean> 
	
	<bean id="deviceThreshold" class="com.pcs.galaxy.resources.DeviceThresholdResource" />
	<bean id="geoConfig" class="com.pcs.galaxy.resources.GeofenceAlarmConfigResource" />
	
		<!-- Swagger Configuration -->
	<bean id="swaggerConfig" class="io.swagger.jaxrs.config.BeanConfig">
		<property name="resourcePackage" value="com.pcs.galaxy.resources" />
		<property name="version" value="1.0.0" />
		<!-- <property name="basePath" value="/api" /> -->
		<property name="title" value="Alarm_Threshold_Config" />
		<!-- <property name="description" value="Swagger Api Documentation" /> -->
		<property name="scan" value="true" />
	</bean>
</beans>

<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>

	<groupId>com.pcs.event</groupId>
	<artifactId>scanner</artifactId>
	<version>0.0.1-SNAPSHOT</version>
	<packaging>bundle</packaging>

	<name>scanner</name>
	<url>http://maven.apache.org</url>

	<properties>
		<project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
		<embed-dep>*;scope=compile;artifactId=EOS-connectivity</embed-dep>
	</properties>
	<dependencies>
		<dependency>
			<groupId>org.slf4j</groupId>
			<artifactId>slf4j-api</artifactId>
			<version>1.7.10</version>
			<scope>provided</scope>
		</dependency>
		<dependency>
			<groupId>com.pcs.saffron</groupId>
			<artifactId>EOS-cipher</artifactId>
			<version>0.0.1-SNAPSHOT</version>
			<scope>provided</scope>
			<type>bundle</type>
		</dependency>
		<dependency>
			<groupId>com.pcs.saffron</groupId>
			<artifactId>EOS-connectivity</artifactId>
			<version>0.0.1-SNAPSHOT</version>
		</dependency>

		<dependency>
			<groupId>javax.jms</groupId>
			<artifactId>javax.jms-api</artifactId>
			<version>2.0.1</version>
			<scope>provided</scope>
		</dependency>

		<dependency>
			<groupId>com.pcs.jms</groupId>
			<artifactId>jmshelper</artifactId>
			<version>0.0.1-SNAPSHOT</version>
			<scope>provided</scope>
		</dependency>
		<dependency>
			<groupId>com.pcs.saffron</groupId>
			<artifactId>EOS-notification</artifactId>
			<version>0.0.1-SNAPSHOT</version>
			<scope>provided</scope>
		</dependency>

		<dependency>
			<groupId>com.pcs.osgi</groupId>
			<artifactId>scalaosgi</artifactId>
			<version>0.0.1-SNAPSHOT</version>
			<type>bundle</type>
			<scope>provided</scope>
		</dependency>
		<dependency>
			<groupId>com.pcs.osgi</groupId>
			<artifactId>kafka-all-osgi</artifactId>
			<version>0.0.1-SNAPSHOT</version>
			<scope>provided</scope>
		</dependency>

		<dependency>
			<groupId>com.pcs.saffron</groupId>
			<artifactId>EOS-manager</artifactId>
			<version>0.0.1-SNAPSHOT</version>
			<scope>provided</scope>
		</dependency>
		<dependency>
			<groupId>org.apache.activemq</groupId>
			<artifactId>activemq-all</artifactId>
			<version>5.12.1</version>
		</dependency>
	</dependencies>

	<build>
		<defaultGoal>install</defaultGoal>
		<plugins>

			<plugin>
				<groupId>org.apache.felix</groupId>
				<artifactId>maven-bundle-plugin</artifactId>
				<version>1.4.0</version>
				<extensions>true</extensions>
				<goals>
					<goal>bundleall</goal>
				</goals>
				<configuration>
					<instructions>
						<Bundle-SymbolicName>${pom.groupId}.${pom.artifactId}</Bundle-SymbolicName>
						<Bundle-Name>${pom.artifactId}</Bundle-Name>
						<Bundle-Version>2.0.0</Bundle-Version>
						<Bundle-Activator>com.pcs.event.scanner.osgi.EventScanActivator</Bundle-Activator>
						<Export-Package>
							com.pcs.event.scanner,
							com.pcs.event.scanner.beans,
							com.pcs.event.scanner.client,
							com.pcs.event.scanner.config,
							com.pcs.event.scanner.consumer,
							com.pcs.event.scanner.listener,
							com.pcs.event.scanner.listener.util,
							com.pcs.event.scanner.osgi,
							com.pcs.event.scanner.publisher,
							com.pcs.event.scanner.osgi.util
						</Export-Package>
						<Import-Package>
							com.pcs.jms.jmshelper,
							com.pcs.jms.jmshelper.consumers,
							com.pcs.jms.jmshelper.consumers.common,
							com.pcs.jms.jmshelper.consumers.delegates,
							com.pcs.jms.jmshelper.enums,
							com.pcs.jms.jmshelper.enums.common,
							com.pcs.jms.jmshelper.publishers,
							javax.jms.*,
							org.I0Itec.zkclient,
							org.I0Itec.zkclient.exception,
							org.I0Itec.zkclient.serialize,
							org.I0Itec.zkclient.util,
							org.apache.jute,
							org.apache.jute.compiler,
							org.apache.jute.compiler.generated,
							org.apache.zookeeper.jmx,
							org.apache.zookeeper.proto,
							org.apache.zookeeper.server.quorum.flexible,
							org.apache.zookeeper.server.upgrade,
							org.apache.zookeeper.server.util,
							org.apache.zookeeper.txn,
							org.apache.zookeeper.version.util,
							kafka.javaapi.consumer,
							kafka.javaapi.message,
							org.osgi.framework,
							*;resolution:=optional
						</Import-Package>
					</instructions>
				</configuration>
			</plugin>
		</plugins>
	</build>
</project>

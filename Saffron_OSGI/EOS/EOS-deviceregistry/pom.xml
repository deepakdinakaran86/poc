<?xml version="1.0"?>
<project
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd"
	xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
	<modelVersion>4.0.0</modelVersion>
	<parent>
		<groupId>com.pcs.saffron</groupId>
		<artifactId>EOS</artifactId>
		<version>0.0.1-SNAPSHOT</version>
	</parent>
	<artifactId>EOS-deviceregistry</artifactId>
	<name>EOS-deviceregistry</name>
	<url>http://maven.apache.org</url>
	<properties>
		<project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
	</properties>
	<dependencies>
		<dependency>
			<groupId>junit</groupId>
			<artifactId>junit</artifactId>
			<version>3.8.1</version>
			<scope>test</scope>
		</dependency>
		<dependency>
			<groupId>com.pcs.saffron</groupId>
			<artifactId>EOS-notification</artifactId>
			<version>0.0.1-SNAPSHOT</version>
			<scope>provided</scope>
		</dependency>
		<dependency>
			<groupId>com.fasterxml.jackson.core</groupId>
			<artifactId>jackson-databind</artifactId>
			<version>2.6.2</version>
			<scope>provided</scope>
		</dependency>
		<dependency>
			<groupId>com.pcs.saffron</groupId>
			<artifactId>EOS-commons</artifactId>
			<version>0.0.1-SNAPSHOT</version>
			<scope>provided</scope>
		</dependency>
		<dependency>
			<groupId>com.pcs.saffron</groupId>
			<artifactId>EOS-manager</artifactId>
			<version>0.0.1-SNAPSHOT</version>
			<scope>provided</scope>
		</dependency>
		<dependency>
			<groupId>com.pcs.osgi</groupId>
			<artifactId>scalaosgi</artifactId>
			<version>0.0.1-SNAPSHOT</version>
			<type>bundle</type>
			<scope>provided</scope>
		</dependency>
		<dependency>
			<groupId>com.pcs.osgi</groupId>
			<artifactId>kafka-all-osgi</artifactId>
			<version>0.0.1-SNAPSHOT</version>
			<scope>provided</scope>
		</dependency>

	</dependencies>

	<build>
		<defaultGoal>install</defaultGoal>
		<plugins>

			<plugin>
				<groupId>org.apache.felix</groupId>
				<artifactId>maven-bundle-plugin</artifactId>
				<version>1.4.0</version>
				<extensions>true</extensions>
				<goals>
					<goal>bundleall</goal>
				</goals>
				<configuration>
					<instructions>
						<Bundle-SymbolicName>${pom.groupId}.${pom.artifactId}</Bundle-SymbolicName>
						<Bundle-Name>${pom.artifactId}</Bundle-Name>
						<Bundle-Version>1.0.0</Bundle-Version>
						<Bundle-Activator>com.pcs.saffron.deviceregistry.osgi.DeviceRegistryActivator</Bundle-Activator>
						<Export-Package>
							com.pcs.saffron.deviceregistry,
							com.pcs.saffron.deviceregistry.configuration,
							com.pcs.saffron.deviceregistry.consumer,
							com.pcs.saffron.deviceregistry.handler,
							com.pcs.saffron.deviceregistry.osgi,
							com.pcs.saffron.deviceregistry.osgi.util,
							com.pcs.saffron.deviceregistry.processor
						</Export-Package>
						<Import-Package>
							org.I0Itec.zkclient,
							org.I0Itec.zkclient.exception,
							org.I0Itec.zkclient.serialize,
							org.I0Itec.zkclient.util,
							org.apache.jute,
							org.apache.jute.compiler,
							org.apache.jute.compiler.generated,
							org.apache.zookeeper.jmx,
							org.apache.zookeeper.proto,
							org.apache.zookeeper.server.quorum.flexible,
							org.apache.zookeeper.server.upgrade,
							org.apache.zookeeper.server.util,
							org.apache.zookeeper.txn,
							org.apache.zookeeper.version.util,
							kafka.javaapi.consumer,
							kafka.javaapi.message,
							org.osgi.framework,
							*;resolution:=optional
						</Import-Package>
					</instructions>
				</configuration>
			</plugin>
		</plugins>
	</build>

	<packaging>bundle</packaging>
</project>

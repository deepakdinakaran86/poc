<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>

	<groupId>com.pcs.gateway</groupId>
	<artifactId>teltonika</artifactId>
	<version>0.0.1-SNAPSHOT</version>
	<packaging>bundle</packaging>

	<name>teltonika</name>
	<url>http://maven.apache.org</url>

	<properties>
		<project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
		<embed-dep>*;scope=compile;artifactId=EOS-connectivity</embed-dep>
	</properties>

	<dependencies>
		<dependency>
			<groupId>junit</groupId>
			<artifactId>junit</artifactId>
			<version>3.8.1</version>
			<scope>test</scope>
		</dependency>
		<dependency>
			<groupId>org.slf4j</groupId>
			<artifactId>slf4j-api</artifactId>
			<version>1.7.10</version>
			<scope>provided</scope>
		</dependency>
		<dependency>
			<groupId>com.pcs.saffron</groupId>
			<artifactId>EOS-cipher</artifactId>
			<version>0.0.1-SNAPSHOT</version>
			<scope>provided</scope>
			<type>bundle</type>
		</dependency>
		<dependency>
			<groupId>com.pcs.saffron</groupId>
			<artifactId>EOS-cache</artifactId>
			<version>0.0.1-SNAPSHOT</version>
			<type>bundle</type>
			<scope>provided</scope>
		</dependency>
		<dependency>
			<groupId>com.pcs.saffron</groupId>
			<artifactId>EOS-manager</artifactId>
			<version>0.0.1-SNAPSHOT</version>
			<type>bundle</type>
			<scope>provided</scope>
		</dependency>
		<dependency>
			<groupId>com.pcs.saffron</groupId>
			<artifactId>EOS-connectivity</artifactId>
			<version>0.0.1-SNAPSHOT</version>
		</dependency>
		<dependency>
			<groupId>com.pcs.saffron</groupId>
			<artifactId>EOS-commons</artifactId>
			<version>0.0.1-SNAPSHOT</version>
			<type>bundle</type>
			<scope>provided</scope>
		</dependency>
		<dependency>
			<groupId>commons-collections</groupId>
			<artifactId>commons-collections</artifactId>
			<version>3.2.1</version>
		</dependency>
		<dependency>
			<groupId>org.apache.commons</groupId>
			<artifactId>commons-lang3</artifactId>
			<version>3.4</version>
		</dependency>
		<dependency>
			<groupId>org.apache.httpcomponents</groupId>
			<artifactId>httpclient</artifactId>
			<version>4.4</version>
			<scope>provided</scope>
		</dependency>
		<dependency>
			<groupId>com.fasterxml.jackson.core</groupId>
			<artifactId>jackson-databind</artifactId>
			<version>2.5.1</version>
			<scope>provided</scope>
		</dependency>
		<dependency>
			<groupId>commons-io</groupId>
			<artifactId>commons-io</artifactId>
			<version>2.4</version>
			<scope>provided</scope>
		</dependency>
		<dependency>
			<groupId>joda-time</groupId>
			<artifactId>joda-time</artifactId>
			<version>2.8.2</version>
			<scope>provided</scope>
		</dependency>


		<dependency>
			<groupId>com.pcs.saffron</groupId>
			<artifactId>EOS-notification</artifactId>
			<version>0.0.1-SNAPSHOT</version>
			<scope>provided</scope>
		</dependency>
		<dependency>
			<groupId>com.pcs.osgi</groupId>
			<artifactId>rabbitmq-amqp-osgi</artifactId>
			<version>0.0.1-SNAPSHOT</version>
			<type>bundle</type>
			<scope>provided</scope>
		</dependency>
		<dependency>
			<groupId>com.hazelcast</groupId>
			<artifactId>hazelcast-client</artifactId>
			<version>3.4.1</version>
			<scope>provided</scope>
		</dependency>
		<dependency>
			<groupId>com.hazelcast</groupId>
			<artifactId>hazelcast</artifactId>
			<version>3.4.1</version>
			<scope>provided</scope>
		</dependency>
		<dependency>
			<groupId>com.pcs.jms</groupId>
			<artifactId>jmshelper</artifactId>
			<version>0.0.1-SNAPSHOT</version>
			<type>bundle</type>
			<scope>provided</scope>
		</dependency>
		<dependency>
			<groupId>org.apache.activemq</groupId>
			<artifactId>activemq-all</artifactId>
			<version>5.12.1</version>
		</dependency>
		<dependency>
			<groupId>javax.jms</groupId>
			<artifactId>javax.jms-api</artifactId>
			<version>2.0.1</version>
			<scope>provided</scope>
		</dependency>
		<dependency>
			<groupId>com.pcs.saffron</groupId>
			<artifactId>EOS-expressions</artifactId>
			<version>0.0.1-SNAPSHOT</version>
			<type>bundle</type>
			<scope>provided</scope>
		</dependency>
	</dependencies>

	<build>
		<defaultGoal>install</defaultGoal>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-compiler-plugin</artifactId>
				<version>3.5.1</version>
				<configuration>
					<source>1.7</source>
					<target>1.7</target>
				</configuration>
			</plugin>

			<plugin>
				<groupId>org.apache.felix</groupId>
				<artifactId>maven-bundle-plugin</artifactId>
				<version>1.4.0</version>
				<extensions>true</extensions>
				<configuration>
					<instructions>
						<Bundle-SymbolicName>${pom.groupId}.${pom.artifactId}.localmode</Bundle-SymbolicName>
						<Bundle-Name>${pom.artifactId}-localmode</Bundle-Name>
						<Bundle-Version>1.0.0_local</Bundle-Version>
						<Bundle-Activator>com.pcs.gateway.teltonika.osgi.TeltonikaActivator</Bundle-Activator>
						<Private-Package>com.pcs.gateway.teltonika.*</Private-Package>
						<Embed-Dependency>${embed-dep}</Embed-Dependency>
						<Export-Package>
							com.pcs.gateway.teltonika.osgi,
							com.pcs.gateway.teltonika.handler.tcp,
							com.pcs.gateway.teltonika.handler.udp,
							com.pcs.gateway.teltonika.bundle.*,
							com.pcs.gateway.teltonika.bootstrap,
							com.pcs.gateway.teltonika.constant,
							com.pcs.gateway.teltonika.constant.codec,
							com.pcs.gateway.teltonika.decoder,
							com.pcs.gateway.teltonika.devicemanager,
							com.pcs.gateway.teltonika.message.header,
							com.pcs.gateway.teltonika.message.packet.type,
							com.pcs.gateway.teltonika.state,
							com.pcs.gateway.teltonika.utils,
							com.pcs.gateway.teltonika.devicemanager.*,
							com.pcs.gateway.teltonika.exception,
							com.pcs.gateway.teltonika.config,
							com.pcs.gateway.teltonika.event.*
						</Export-Package>
						<Import-Package>
							!com.pcs.saffron.cache.hazelcast,
							com.pcs.saffron.manager.*,
							com.pcs.saffron.notification.handler.*,
							com.pcs.saffron.notification.enums.*,
							com.pcs.saffron.notification.broker.*,
							com.pcs.gateway.teltonika.bundle.utils.*,
							com.pcs.saffron.cache.base,
							com.hazelcast.*,
							kafka.javaapi.producer,
							kafka.producer,
							com.pcs.jms.jmshelper.consumers,
							com.pcs.jms.jmshelper.consumers.common,
							com.pcs.jms.jmshelper.consumers.delegates,
							com.pcs.jms.jmshelper.enums,
							com.pcs.jms.jmshelper.enums.common,
							com.pcs.jms.jmshelper.publishers,
							javax.jms.*,
							com.pcs.saffron.connectivity.*,
							scala,
							org.osgi.framework,
							*;resolution:=optional
						</Import-Package>
					</instructions>
				</configuration>
			</plugin>
		</plugins>
	</build>
</project>

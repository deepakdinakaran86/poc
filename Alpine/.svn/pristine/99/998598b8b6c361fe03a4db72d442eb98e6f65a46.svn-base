<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:jaxrs="http://cxf.apache.org/jaxrs"
	xmlns:tx="http://www.springframework.org/schema/tx" xmlns:p="http://www.springframework.org/schema/p"
	xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd 
		http://cxf.apache.org/bindings/soap http://cxf.apache.org/schemas/configuration/soap.xsd 
		http://cxf.apache.org/jaxrs http://cxf.apache.org/schemas/jaxrs.xsd 
		http://www.springframework.org/schema/context	http://www.springframework.org/schema/context/spring-context.xsd ">



	<import resource="/spring/adaptor-app-context.xml" />

	<!-- Swagger API listing resource -->
	<bean id="swaggerResource" class="io.swagger.jaxrs.listing.ApiListingResource" />

	<!-- Swagger writers -->
	<bean id="swaggerWriter" class="io.swagger.jaxrs.listing.SwaggerSerializers" />

	<jaxrs:server id="usermanagement" address="/services">
		<jaxrs:serviceBeans>
			<ref bean="userResource" />
			<ref bean="roleResource" />
			<ref bean="permissionGroupResource" />
			<ref bean="swaggerResource" />
		</jaxrs:serviceBeans>
		<jaxrs:providers>
			<ref bean="jacksonJsonProvider" />
			<ref bean="exceptionHandler" />
			<ref bean="subscriptionProfile" />
			<ref bean="swaggerWriter" />
		</jaxrs:providers>
	</jaxrs:server>

	<bean id="subscriptionProfile"
		class="com.pcs.alpine.commons.serviceImpl.SubscriptionProfileFilter">
	</bean>

	<bean id="jsonObjectMapper" class="com.pcs.alpine.rest.mapper.GalaxyObjectMapper" />

	<bean id="jacksonJsonProvider"
		class="com.fasterxml.jackson.jaxrs.json.JacksonJaxbJsonProvider">
		<constructor-arg name="mapper" ref="jsonObjectMapper" />
		<constructor-arg name="annotationsToUse">
			<null />
		</constructor-arg>
	</bean>
	<bean id="userResource" class="com.pcs.alpine.resources.UserResource" />
	<bean id="roleResource" class="com.pcs.alpine.resources.RoleResource" />
	<bean id="exceptionHandler" class="com.pcs.alpine.commons.exception.GalaxyExceptionHandler" />
	<bean id="permissionGroupResource" class="com.pcs.alpine.resources.PermissionGroupResource" />

	<!-- Swagger Configuration -->
	<bean id="swaggerConfig" class="io.swagger.jaxrs.config.BeanConfig">
		<property name="resourcePackage" value="com.pcs.alpine.resources" />
		<property name="version" value="1.0.0" />
		<property name="basePath" value="/users" />
		<property name="title" value="User-API" />
		<property name="description" value="This document describes User Apis" />
		<property name="scan" value="true" />
	</bean>
</beans>

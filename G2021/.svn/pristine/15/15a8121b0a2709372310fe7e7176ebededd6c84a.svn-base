	<style type="text/css">
		#grid-view .k-grid-header .k-header {
			background-color: #f44336;
		}

		#grid-view .k-header a.k-link, .k-grid-header th{
			color: #000 !important;
		}

		.alert-danger {
			background-color: #f2dede;
			border-color: #ebccd1;
			color: #a94442;
		}
		
		.form-control-custom {
			height: 20px;
			padding: 6px 12px;
			font-size: 14px;
			color: #555;
			border: 1px solid #ccc;
			border-radius: 4px;
			width: 85%;
		}
		
		.diviceactions a {
			margin: 2px;
		}
		div#gapp-device-list td a {
			color: #f44336;
		}
		
		#tenantSection {
			background-color: #F3F3F3;
			box-shadow: -8px -3px 17px -10px #797979 inset;
		}
		
		.leftbar-clientlist{
			padding: 5px 10px;
		}
	
	.search-client{
	    height: 20px;
    padding: 6px 12px;
    font-size: 14px;
    color: #555;
    border: 1px solid #ccc;
    border-radius: 4px;
    width: 85%;
	margin-bottom:15px;
	}
	
	span.k-in > span.highlight {
